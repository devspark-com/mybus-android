<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/favorite_star_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginRight="12dp"
            android:layout_weight="2"
            android:src="@drawable/favorite_blue" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/favorite_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Casa"
                android:textColor="@color/abc_search_url_text_selected"
                android:textSize="@dimen/favorite_item_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/favorite_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Avenida Pedro Luro 2200"
                android:textSize="@dimen/favorite_item_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="right"
            android:layout_weight="5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/favorite_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:src="@drawable/edit" />

            <ImageView
                android:id="@+id/favorite_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingLeft="16dp"
                android:src="@drawable/remove" />
        </LinearLayout>

    </LinearLayout>

    <View style="@style/Divider"/>
</LinearLayout>